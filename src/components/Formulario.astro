---
import '../styles/formulario.css'
---
<section class="contact-section">
  <div class="contact-container">
    <!-- Left Side: Info -->
    <div class="contact-info">
      <span class="contact-label">Contact Us Now</span>
      <h2 class="contact-title">We're here to answer your questions.</h2>
      <p class="contact-subtitle">
        Have a question, suggestion, or just want to say hi?<br />
        We're here and happy to hear from you!
      </p>

      <div class="contact-methods">
        <div class="contact-method">
          <div class="method-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" fill="white"/>
            </svg>
          </div>
          <div class="method-content">
            <h3>Office Location</h3>
            <p>100 S Main St, New York, NY</p>
          </div>
        </div>

        <div class="contact-method">
          <div class="method-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" fill="white"/>
            </svg>
          </div>
          <div class="method-content">
            <h3>Send a Message</h3>
            <p>contact@uhome-property.com</p>
          </div>
        </div>

        <div class="contact-method">
          <div class="method-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56-.35-.12-.74-.03-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z" fill="white"/>
            </svg>
          </div>
          <div class="method-content">
            <h3>Call Us Directly</h3>
            <p>(123) 202-9296</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side: Form -->
    <div class="contact-form-wrapper">
      <h3 class="form-title">Get In Touch</h3>
      <p class="form-subtitle">
        Have a question, suggestion, or just want to say hi? Fill out the form below and we'll get back to you soon.
      </p>

      <form class="contact-form">
        <div class="form-group">
          <input 
            type="text" 
            name="name" 
            placeholder="Your Name" 
            required
            class="form-input"
          />
        </div>

        <div class="form-group">
          <input 
            type="tel" 
            name="phone" 
            placeholder="Your Phone" 
            required
            class="form-input"
          />
        </div>

        <div class="form-group">
          <input 
            type="email" 
            name="email" 
            placeholder="Your Email" 
            required
            class="form-input"
          />
        </div>

        <div class="form-group">
          <textarea 
            name="message" 
            placeholder="Your message" 
            rows="5"
            required
            class="form-textarea"
          ></textarea>
        </div>

        <button type="submit" class="submit-button">Send message</button>
      </form>
    </div>
  </div>
</section>