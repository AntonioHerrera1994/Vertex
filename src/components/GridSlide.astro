---
import '../styles/gridslide.css'
// ServicesSlider.astro
import image1 from '../assets/segunda.png';
import image2 from '../assets/video.webp';
import image3 from '../assets/l3.webp';

const services = [
  {
    image: image1.src,
    title: 'Ship Freight Services',
    description: 'Reliable ocean freight solutions'
  },
  {
    image: image2.src,
    title: 'Global Cargo Tracking',
    description: 'Real-time tracking worldwide'
  },
  {
    image: image3.src,
    title: 'Efficient Freight Solutions',
    description: 'Fast and secure deliveries'
  }
];
---
<section class="services-carousel-section">
  <div class="carousel-box">
    <button class="carousel-arrow carousel-prev" aria-label="Previous">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <div class="carousel-viewport">
      <div class="carousel-slides">
        <!-- Clones al final para loop infinito -->
        {services.map(service => (
          <div class="carousel-item clone">
            <img src={service.image} alt={service.title} class="carousel-image" />
            <div class="carousel-gradient"></div>
            <div class="carousel-text">
              <h2>{service.title}</h2>
              <p>{service.description}</p>
            </div>
          </div>
        ))}
        <!-- Slides originales -->
        {services.map(service => (
          <div class="carousel-item">
            <img src={service.image} alt={service.title} class="carousel-image" />
            <div class="carousel-gradient"></div>
            <div class="carousel-text">
              <h2>{service.title}</h2>
              <p>{service.description}</p>
            </div>
          </div>
        ))}
        <!-- Clones al inicio para loop infinito -->
        {services.map(service => (
          <div class="carousel-item clone">
            <img src={service.image} alt={service.title} class="carousel-image" />
            <div class="carousel-gradient"></div>
            <div class="carousel-text">
              <h2>{service.title}</h2>
              <p>{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <button class="carousel-arrow carousel-next" aria-label="Next">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>
</section>


<script>
    import '../scripts/gridslide'
</script>