---
import '../styles/navbar.css'
import Logo from '../assets/vertex-naranja-2.png'


const navLinks = [
  { name: 'Inicio', href: '/' },
  { name: 'Nosotros', href: '/nosotros' },
  { name: 'Servicios', href: '/servicios' },
  
  { name: 'Contacto', href: '/contacto' }
];

const services = [
  'Maritimo',
  'Terrestre',
  'Aéreo',
  'Proyectos',
  'Servicios Aduanales',
  'Almacenamiento',
  'NFO (Next Flight Out)/ Hot shots'
];
---

<nav class="navbar">
  <div class="navbar-container">
    <!-- Logo -->
    <a href="/" class="logo">
     <img
     src={Logo.src}>
    </a>

    <!-- Desktop Menu -->
    <ul class="nav-menu desktop-menu">
      {navLinks.map(link => (
        <li>
          <a href={link.href}>{link.name}</a>
        </li>
      ))}
    </ul>

    <!-- Desktop CTA Button -->
    <a href="tel:+526461054242" class="cta-btn desktop-cta">Solicitar Cotización</a>

    <!-- Hamburger Button -->
    <button class="hamburger" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Sidebar Menu -->
  <div class="sidebar-overlay"></div>
  <aside class="sidebar">
    <div class="sidebar-header">
      <img
     src={Logo.src}>
    </a>

    </div>

    <div class="sidebar-content">
      <!-- Our Services Section -->
      <div class="sidebar-section">
        <h3>Nuestros Servicios</h3>
        <ul class="services-list">
          {services.map(service => (
            <li>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M16.6 7L8.5 15.1 3.4 10" stroke="#ff5722" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              {service}
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Us Section -->
      <div class="sidebar-section">
        <h3>Contacto</h3>
        <ul class="contact-list">
          <li>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M2 4h16M2 4v12h16V4M2 4l8 6 8-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
            <a href="tel:+526461054242">+52 (646)105-4242</a>
          </li>
          <li>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M10 11a2 2 0 100-4 2 2 0 000 4z" stroke="currentColor" stroke-width="1.5"/>
              <path d="M10 2C7.2 2 5 4.2 5 7c0 4.5 5 9 5 9s5-4.5 5-9c0-2.8-2.2-5-5-5z" stroke="currentColor" stroke-width="1.5"/>
            </svg>
            López Mateos 1090-13 Zona Centro, Ensenada BC, México CP 22800
          </li>
          <li>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M2 6l8 5 8-5M2 6v8l8 5 8-5V6l-8-5-8 5z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
            <a href="mailto:info@vertexf.com">info@vertexf.com</a>
          </li>
        </ul>
      </div>

      <!-- About Us Section -->
      <div class="sidebar-section">
        <h3>Nosotros</h3>
        <p>En Vertex Freight Services, somos su aliado confiable en logística internacional. Nos especializamos en transportar su mercancía de forma segura, eficiente y puntual a cualquier destino del mundo.</p>
      </div>
    </div>
  </aside>
</nav>

<script>
    import '../scripts/navbar'
</script>
