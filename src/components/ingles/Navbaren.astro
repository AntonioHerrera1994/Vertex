---
import '../../styles/navbar.css'
import Logo from '../../assets/vertex-naranja-2.png'

const navLinks = [
  { name: 'Home', href: '/en' },
  { name: 'About Us', href: '/about-us' },
  { name: 'Services', href: '/services' },
  { name: 'Contact', href: '/contact' },
  { name: 'Spanish', href: '/' },
];
---

<nav class="navbar">
  <div class="navbar-container">
    <!-- Logo -->
    <a href="/en" class="logo">
      <img src={Logo.src} alt="Vertex Freight">
    </a>

    <!-- Desktop Menu -->
    <ul class="nav-menu desktop-menu">
      {navLinks.map(link => (
        <li>
          <a href={link.href}>{link.name}</a>
        </li>
      ))}
    </ul>

    <!-- Desktop CTA Button -->
    <a href="/contact" class="cta-btn desktop-cta">Request a Quote</a>

    <!-- Hamburger Button -->
    <button class="hamburger" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Sidebar Menu -->
  <div class="sidebar-overlay"></div>
  <aside class="sidebar">
    <div class="sidebar-header">
      <img src={Logo.src} alt="Vertex Freight">
      <button class="close-btn" aria-label="Cerrar menú">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="sidebar-content">
      <!-- Navigation Menu Section -->
      <div class="sidebar-section">
        <h3>Menu</h3>
        <ul class="nav-list">
          {navLinks.map(link => (
            <li>
              <a href={link.href}>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M16.6 7L8.5 15.1 3.4 10" stroke="#ff5722" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Us Section -->
      <div class="sidebar-section">
        <h3>Contact</h3>
        <ul class="contact-list">
          <li>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M2 4h16M2 4v12h16V4M2 4l8 6 8-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
            <a href="tel:+526461054242">+52 (646)105-4242</a>
          </li>
          <li>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M10 11a2 2 0 100-4 2 2 0 000 4z" stroke="currentColor" stroke-width="1.5"/>
              <path d="M10 2C7.2 2 5 4.2 5 7c0 4.5 5 9 5 9s5-4.5 5-9c0-2.8-2.2-5-5-5z" stroke="currentColor" stroke-width="1.5"/>
            </svg>
            López Mateos 1090-13 Zona Centro, Ensenada BC, México CP 22800
          </li>
          <li>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M2 6l8 5 8-5M2 6v8l8 5 8-5V6l-8-5-8 5z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
            <a href="mailto:info@vertexf.com">info@vertexf.com</a>
          </li>
        </ul>
      </div>

      <!-- About Us Section -->
      <div class="sidebar-section">
        <h3>About Us</h3>
        <p>At Vertex Freight Services, we are your reliable partner in international logistics. We specialize in transporting your cargo safely, efficiently, and on time to any destination in the world.</p>
      </div>
    </div>
  </aside>
</nav>

<script>
  import '../../scripts/navbar'
</script>