---
import '../styles/header.css'
import Navbar from './Navbar.astro';
const slides = [
  {
    image: ' ../assets/a2-768x430.webp',
    title: 'Soluciones Logísticas Globales, Simples y Confiables',
    description: 'Movemos tu carga a través de las rutas comerciales más importantes del mundo. Desde envíos completos hasta consolidaciones, en Vertex Freight te ofrecemos eficiencia, visibilidad y control en cada etapa del transporte internacional.',
    button: 'Cotiza tu envío ahora'
  },
  {
    image: '../assets/a1-1536x861.webp',
    title: 'Transporte Terrestre Confiable con Cobertura en Todo el País',
    description: 'Accede a una amplia red de transportistas certificados en Estados Unidos. En Vertex Freight coordinamos envíos LTL, FTL y expeditados, asegurando visibilidad, control y cumplimiento en cada movimiento.',
    button: 'Cotiza tu envío ahora'
  }
];
---

<section class="hero-carousel">
    <Navbar />
  <div class="carousel-container">
    <!-- Slides -->
    {slides.map((slide, index) => (
      <div class={`slide ${index === 0 ? 'active' : ''}`} data-slide={index}>
        <div class="slide-bg" style={`background-image: url('${slide.image}')`}></div>
        <div class="overlay"></div>
        <div class="content">
          <h1>{slide.title}</h1>
          <p>{slide.description}</p>
          <a href="#contact" class="cta-button">{slide.button}</a>
        </div>
      </div>
    ))}

    <!-- Controles -->
    <button class="nav-btn prev" aria-label="Previous slide">
      <svg width="30" height="30" viewBox="0 0 24 24" fill="none">
        <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
    <button class="nav-btn next" aria-label="Next slide">
      <svg width="30" height="30" viewBox="0 0 24 24" fill="none">
        <path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <!-- Indicadores -->
    <div class="indicators">
      {slides.map((_, index) => (
        <button 
          class={`indicator ${index === 0 ? 'active' : ''}`} 
          data-slide={index}
          aria-label={`Go to slide ${index + 1}`}
        ></button>
      ))}
    </div>
  </div>
</section>

<script>
    import '../scripts/hero'
</script>