---
import '../styles/experiencia.css'
// ExpertiseSection.astro
const expertise = [
  { name: 'Transporte de Carga', percentage: 100 },
  { name: 'Proyectos', percentage: 100 },
  { name: 'Gestión aduanera', percentage: 100 },
  { name: 'Almacenamiento y Distribución', percentage: 100 }
];

const stats = [
  { value: '+1000', label: 'Operaciones Completadas' },
{ value: '+100', label: 'Empresas Atendidas' },
{ value: '+10', label: 'Alianzas Globales' },
{ value: '+35', label: 'Años de Trayectoria' }
];
---

<section class="expertise-section">
  <div class="expertise-container">
    <!-- Left Side: Expertise Bars -->
    <div class="expertise-bars">
      <h2 class="expertise-title">Nuestra Experiencia</h2>
      
      {expertise.map(item => (
        <div class="expertise-item">
          <div class="expertise-header">
            <span class="expertise-name">{item.name}</span>
            <span class="expertise-percentage">{item.percentage}%</span>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" style={`width: ${item.percentage}%`}></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Right Side: Stats Grid -->
    <div class="stats-grid">
      {stats.map(stat => (
        <div class="stat-item">
          <h3 class="stat-value">{stat.value}</h3>
          <p class="stat-label">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>


<script>
import '../scripts/exp'
</script>